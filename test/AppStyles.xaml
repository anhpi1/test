<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="hieu_ung_bong_trang"
           TargetType="Border">
        <Style.Setters>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="White"
                                      Direction="135"
                                      ShadowDepth="6"
                                      BlurRadius="10"
                                      Opacity="0.8" />
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
    <Style x:Key="hieu_ung_bong_den"
           TargetType="Border">
        <Style.Setters>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Direction="-45"
                                      ShadowDepth="6"
                                      BlurRadius="10"
                                      Opacity="0.2" />
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>